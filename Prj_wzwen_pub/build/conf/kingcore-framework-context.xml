	<bean id="servletContainer" class="com.kingcore.framework.context.TomcatContainer"/>
    <bean id="dataSourceManager" class="com.kingcore.framework.context.PlainDataSourceManager">
		<property name="dataSources">
			<map>
				<entry key="dataSource">
					<ref bean="dataSource"/>
				</entry>
			</map>
		</property>
		<property name="defaultDataSourceName">
			<value>dataSource</value>
		</property>		
	</bean>  -->

